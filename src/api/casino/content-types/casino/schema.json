{
  "kind": "collectionType",
  "collectionName": "casinos",
  "info": {
    "singularName": "casino",
    "pluralName": "casinos",
    "displayName": "Casino",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "required": true
    },
    "bonus_title": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "required": true
    },
    "logo": {
      "type": "media",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "uuid": {
      "type": "customField",
      "customField": "plugin::strapi-advanced-uuid.uuid",
      "required": true
    },
    "features": {
      "type": "customField",
      "customField": "plugin::multi-select.multi-select",
      "options": [
        "Fast, secure deposits and withdrawals with top cryptos.:crypto_casino",
        "Get exclusive rewards, cashback, and high-roller bonuses:vip_available",
        "Play for free and win real money with special offers:no_deposit_bonus_available",
        "Reliable customer service via chat, email, and phone:support_available",
        "A trusted casino with full licensing and fair play:valid_license",
        "Enjoy the thrilling crash game with big winning potential:aviator_game_available",
        ""
      ],
      "required": true
    },
    "rating": {
      "type": "integer",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "required": true,
      "max": 100
    },
    "review": {
      "type": "blocks",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "required": true
    },
    "bonuses": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::bonus.bonus",
      "mappedBy": "casinos"
    },
    "faq": {
      "type": "component",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "component": "faq.faq",
      "repeatable": false
    },
    "mainBonus": {
      "type": "component",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "component": "bonus.main-bonus-info",
      "repeatable": false
    },
    "casinoType": {
      "type": "customField",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "customField": "plugin::multi-select.multi-select",
      "options": [
        "Pay N Play Casino:pay-n-play-casinos",
        "Crypto Casino:crypto-casinos",
        "Fresh Casino:fresh-casinos",
        "Sportsbook:sportsbook-casinos"
      ],
      "required": true
    },
    "allowedCountries": {
      "type": "json",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "required": true
    },
    "allowedCurrencies": {
      "type": "json",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "required": true
    },
    "affiliate_link": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::affiliate-link.affiliate-link",
      "mappedBy": "casino"
    }
  }
}
